<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">


<bean id="emp" abstract="true" class="com.Employee" scope="prototype">
<property name="empId" value="1024"/>
<property name="empName" value="Praveen"/>
<property name="salary" value="15000"/>
<property name="noOfDays" value="15"/>
</bean>


<bean id="ce" parent="emp">
<property name="empId" value="1025"/>
<property name="empName" value="James"/>
<property name="salary" value="18000"/>
<property name="noOfDays" value="12"/> 
</bean>
<bean id="re" class="com.RegularEmployee"/>


</beans>
